<%- include('../partials/head.ejs') %> 
</head>
<body>
        <%- include('../partials/navigation.ejs') %> 
        <article class="card product-item">
                <header class="card__header">
                        <h1 class="product__title">
                                <%= product.title %> 
                        </h1>
                </header>
                <div class="card__image">
                        <img src="<%= product.imageUrl %> " alt="A picture">
                </div>
                <div class="card__content">
                        <h2 class="product__price">
                                $<%= product.price %> 
                        </h2>
                        <p class="product__description">
                                <%= product.description %> 
                        </p>
                </div>
                <div class="card__actions">
                        <div class="details_add_to_cart_buttons">
                                <% if (path === '/admin/products') { %> 
                                        <div class="edit_delete_buttons">
                                                <button class="btn">
                                                        <a href="/admin/edit-product">Edit</a>
                                                </button>
                                                <button class="btn">
                                                        <a href="/admin/delete-product">Delete</a>
                                                </button>
                                        </div>
                                <% } else { %> 
                                        <div class="edit_delete_buttons">
                                                <% if (path === '/product/details')  { %> 
                                                        <%- include('../partials/add_to_cart.ejs', { product: product }) %> 
                                                <% } else { %> 
                                                        <button class="btn">
                                                                <a href="/products/<%= product.id %> ">Details</a>
                                                        </button>
                                                        <%- include('../partials/add_to_cart.ejs', { product }) %> 
                                                <% } %> 
                                        </div>
                                <% } %> 
                        </div>
                        
                </div>
        </article>
        <%- include('../partials/footer.ejs') %> 